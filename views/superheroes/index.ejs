<%- include ('../partials/header') %>
<div class="container my-5">
  <header>
    <h1>
      Known Registered Heroes
    </h1>
  </header>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Alias</th>
        <th>Created At</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% for (let hero of superheroes) { %>
        <tr>
          <td><%= hero.name %></td>
          <td><%= hero.alias %></td>
          <td><%= hero.createdAt %></td>
          <td>
            <a href="/superheroes/<%= hero.id %>">
              <i class="fa fa-eye"></i>
            </a>

            <a href="/superheroes/<%= hero.id %>/edit">
              <i class="fa fa-edit"></i>
            </a>
          </td>
        </tr>
      <% } %>
    </tbody>
  </table>
</div>
<%- include ('../partials/footer') %>